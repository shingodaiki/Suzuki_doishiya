{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es3",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "lib":["es2015"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "!node_modules/@types",
        "test/**/*-spec.ts"
    ]
}
